<!doctype html>
<html class="no-js" lang="{{ locale }}">
{% include "components/head.njk" %}
<body>

{% include "components/mobile-menu.njk" %}

<section id="content">
    <div class="grid-x margin-horizontal-3">
        <div class="cell large-3 show-for-large"></div>
        <div class="cell small-12 large-6 text-center content-container">

            <h1>
                {% if title[locale] %}
                {{ title[locale] }}
                {% else %}
                {{ title }}
                {% endif %}
            </h1>
            <p>{{ description[locale] }}</p>

            {% for i in images %}
            <img src="{{ i.url }}"/>
            <h2 class="image-title">
                {% if i.title[locale] %}
                {{ i.title[locale] }}
                {% else %}
                {{ i.title }}
                {% endif %}
            </h2>
            <p>{{ i.subtitle}}</p>
            {% endfor %}
        </div>
        <div class="cell large-3 show-for-large text-right"></div>
    </div>
</section>

{% include "components/image-loop.njk" %}

{% include "components/script.njk" %}
</body>
</html>

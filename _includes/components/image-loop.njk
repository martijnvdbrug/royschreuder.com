<section id="content">
    <div class="grid-x margin-horizontal-3">
        <div class="cell large-3 show-for-large"></div>
        <div class="cell small-12 large-6 content-container">

            {% for i in images %}
            <div style="margin-bottom: 3rem;">
                <img src="/images/placeholder.png" class="lazy" data-src="{{ i.url }}" style="width: 100%; margin-top:0;"/>
                <h2 class="image-title">
                    {% if i.title[locale] %}
                    {{ i.title[locale] }}
                    {% else %}
                    {{ i.title }}
                    {% endif %}
                </h2>
                <p style="margin-bottom: 0;">{{ i.subtitle}}</p>
                {% if i.linkText[locale] %}
                <a href="{{ i.linkTo }}">{{ i.linkText[locale] }}</a>
                {% else %}
                <a href="{{ i.linkTo }}">{{ i.linkText }}</a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        <div class="cell large-3 show-for-large text-right">

            <!-- Sticky side nav -->
            <div data-sticky-container>

                {% if title === 'Home' %}
                <div data-sticky data-options="marginTop:0;" data-top-anchor="1">
                    {% else %}
                    <div data-sticky data-options="marginTop:0;" data-top-anchor="-1">
                        {% endif %}
                        <ul class="vertical menu" id="largeScreenMenu">
                            <li><br/></li>
                            <li><br/></li>
                            {% include "components/menu-list.njk" %}
                        </ul>
                    </div>
                </div>

            </div>
        </div>
</section>
